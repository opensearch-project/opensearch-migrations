{
  "method": "PUT",
  "uri": "/test",
  "protocol": "HTTP/1.1",
  "headers": [
    {
      "Host": "foo.example",
      "Content-Type": "application/json",
      "Content-Length": "567"
    }
  ],
  "jsonPayload": {
    "settings": {
      "index": {
        "number_of_shards": 7,
        "number_of_replicas": 3
      },
      "analysis": {
        "analyzer": {
          "nameAnalyzer": {
            "type": "custom",
            "tokenizer": "keyword",
            "filter": "uppercase"
          }
        }
      }
    },
    "mappings": {
      "employee": {
        "properties": {
          "age": {
            "type": "long"
          },
          "level": {
            "type": "long"
          },
          "title": {
            "type": "text"
          },
          "name": {
            "type": "text",
            "analyzer": "nameAnalyzer"
          }
        }
      }
    }
  }
}