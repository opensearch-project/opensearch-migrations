{
  "name": "@opensearch-migrations/migrations-workflows",
  "private": true,
  "workspaces": ["packages/*"],
  "devDependencies": {
    "typescript": "^5.8.3",
    "@types/node": "^24.0.13",
    "tsx": "^4.20.5",
    "prettier": "^3.6.2",
    "eslint": "^9.31.0"
  },
  "scripts": {
    "type-check": "npm run type-check --workspaces --if-present",
    "build": "npm run build --workspaces --if-present",

    "build:builders": "npm run build -w @yourorg/argo-workflow-builders",
    "build:schemas": "npm run build -w @yourorg/schemas",
    "build:deps": "npm run build:builders && npm run build:schemas",
    "make-templates": "npm run build:deps && npm run make-templates -w @yourorg/workflow-templates",
    "process-config": "npm run start -w @yourorg/config-processor"
  }
}