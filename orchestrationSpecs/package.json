{
  "name": "@opensearch-migrations/migrations-workflows",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "dependencies": {
    "zod": "^4.0.5"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^24.0.13",
    "eslint": "^9.31.0",
    "expect-type": "^1.2.2",
    "prettier": "^3.6.2",
    "ts-jest": "^29.4.4",
    "tsx": "^4.20.5",
    "typescript": "^5.9.3"
  },
  "scripts": {
    "clean:artifacts": "node scripts/clean-artifacts.js",
    "clean:node": "node scripts/clean-node.js",
    "clean:hard": "npm run clean:artifacts && npm run clean:node",

    "reinstall": "npm run clean:hard && npm install",
    "bootstrap": "npm ci && npm run build && npm run check",

    "build": "npm run build:schemas && npm run build:builders && npm run build:templates",
    "build:schemas": "npm run -w @opensearch-migrations/schemas build",
    "build:builders": "npm run -w @opensearch-migrations/argo-workflow-builders build",
    "build:templates": "npm run -w @opensearch-migrations/migration-workflow-templates build",

    "test": "npm run build && npm -ws --if-present run test",

    "predist-make-templates": "npm run build",
    "dist-make-templates": "npm run make-templates -w @opensearch-migrations/migration-workflow-templates -- ",
    "predist-transform-config": "npm run build",
    "dist-transform-config": "npm run start-transform -w @opensearch-migrations/config-processor",
    "predist-initialize-workflow-state": "npm run build",
    "dist-initialize-workflow-state": "npm run start-initialize -w @opensearch-migrations/config-processor",

    "dev-make-templates": "npm run dev -w @opensearch-migrations/migration-workflow-templates -- ",
    "dev-schema": "npm run schema -w @opensearch-migrations/schemas -- ",
    "dev-argo-schema": "npm run argo-schema -w @opensearch-migrations/schemas -- ",
    "dev-make-sample": "npm run make-sample -w @opensearch-migrations/schemas -- ",
    "dev-transform-config": "npm run dev-transform -w @opensearch-migrations/config-processor",
    "dev-initialize-workflow-state": "npm run dev-initialize -w @opensearch-migrations/config-processor",

    "type-check": "tsgo -p tsconfig.typecheck.all.json --noEmit",
    "make-templates": "npm run dev-make-templates -- ",
    "schema": "npm run dev-schema",
    "argo-schema": "npm run dev-argo-schema",
    "make-sample": "npm run dev-make-sample",
    "transform-config": "npm run dev-transform-config -- ",
    "initialize-workflow-state": "npm run dev-initialize-workflow-state -- "
  }
}
