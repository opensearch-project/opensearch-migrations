{
  "name": "@opensearch-migrations/migrations-workflows",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^24.0.13",
    "eslint": "^9.31.0",
    "expect-type": "^1.2.2",
    "prettier": "^3.6.2",
    "ts-jest": "^29.4.4",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.20.5",
    "typescript": "^5.9.3"
  },
  "scripts": {
    "clean:artifacts": "node scripts/clean-artifacts.js",
    "clean:node": "node scripts/clean-node.js",
    "clean:hard": "npm run clean:artifacts && npm run clean:node",

    "reinstall": "npm run clean:hard && npm install",
    "bootstrap": "npm ci && npm run build && npm run check",

    "build": "npm run build:schemas && npm run build:builders && npm run build:templates",
    "build:schemas": "npm run -w @opensearch-migrations/schemas build",
    "build:builders": "npm run -w @opensearch-migrations/argo-workflow-builders build",
    "build:templates": "npm run -w @opensearch-migrations/migration-workflow-templates build",

    "type-check": "npm run check",
    "check": "npm run check:schemas && npm run check:builders && npm run check:templates",
    "check:schemas": "npm run -w @opensearch-migrations/schemas type-check",
    "check:builders": "npm run -w @opensearch-migrations/argo-workflow-builders type-check",
    "check:templates": "npm run -w @opensearch-migrations/migration-workflow-templates type-check",

    "test": "npm run build && npm -ws --if-present run test",
    "premake-templates": "npm run build",
    "make-templates": "npm run make-templates -w @opensearch-migrations/migration-workflow-templates -- ",
    "preschema": "npm run build",
    "schema": "npm run schema -w @opensearch-migrations/schemas -- ",
    "process-config": "npm run start -w @opensearch-migrations/config-processor"
  },
  "dependencies": {
    "tsconfig-paths": "^4.2.0"
  }
}
