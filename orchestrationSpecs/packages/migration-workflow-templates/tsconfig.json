{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "customConditions": ["development"],
    "paths": {
      "resources/*": ["./resources/*"],
      "@opensearch-migrations/argo-workflow-builders": [
        "../argo-workflow-builders/src/index.ts"
      ],
      "@opensearch-migrations/schemas": [
        "../schemas/src/index.ts"
      ]
    },
    "disableSourceOfProjectReferenceRedirect": false,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "./test", "tests", "**/*.test.ts", "**/__tests__/**"],

  "references": [
    { "path": "../schemas/tsconfig.json" },
    { "path": "../argo-workflow-builders/tsconfig.json" }
  ]
}