{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "types": ["jest", "node"]
  },
  // FENCE: keep TS resolving inside this package
  "baseUrl": ".",
  "paths": {
    "@/*": ["./src/*"],
    "resources/*": ["./resources/*"]
  },

  "isolatedModules": true,
  // Optional extra guard; keeps TS from merging in parent roots
  "rootDir": ".",
  "rootDirs": ["."],
  "include": ["src/**/*", "tests/**/*"],
  "exclude": [
    "**/node_modules/**",
    // belt-and-suspenders; won't stop direct imports, but reduces noise
    "../*/**",
    "../../*/**"
  ]
}
