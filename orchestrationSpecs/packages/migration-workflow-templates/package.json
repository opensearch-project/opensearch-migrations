{
  "name": "@opensearch-migrations/migration-workflow-templates",
  "version": "1.0.0",
  "scripts": {
    "dev": "NODE_OPTIONS='--conditions=development' tsx src/makeTemplates.ts",
    "build": "npx tsgo",
    "make-templates": "tsx makeTemplates.cjs",
    "type-check-deps": "npm run -w @opensearch-migrations/argo-workflow-builders type-check && npm run -w @opensearch-migrations/schemas type-check",
    "type-check": "NODE_OPTIONS='--conditions=development' npx  tsgo -p ../../tsconfig.typecheck.json --noEmit",
    "type-check-all": "npm run type-check && npm run type-check-deps",
    "test": "jest --config ./jest.config.js"
  },
  "dependencies": {
    "@opensearch-migrations/argo-workflow-builders": "*",
    "@opensearch-migrations/schemas": "*",
    "@kubernetes/client-node": "^1.3.0",
    "@typescript/native-preview": "^7.0.0-dev.20250919.1",
    "tsconfig-paths": "*"
  },
  "devDependencies": {
    "@types/jest": "*",
    "expect-type": "*"
  }
}
