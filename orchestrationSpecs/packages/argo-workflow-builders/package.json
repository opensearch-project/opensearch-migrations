{
  "name": "@opensearch-migrations/argo-workflow-builders",
  "version": "1.0.0",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": "./src/index.ts",
    "./*": null,
    "./package.json": "./package.json"
  },
  "scripts": {
    "build": "echo 'argo-workflow-builders: no build step needed (exports .ts directly)'",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:integ": "NODE_OPTIONS=--experimental-vm-modules jest --config jest.integ.config.mjs",
    "test:parity": "NODE_OPTIONS=--experimental-vm-modules jest --config jest.integ.config.mjs -- parity/",
    "test:parity:broken": "PARITY_INCLUDE_BROKEN=1 NODE_OPTIONS=--experimental-vm-modules jest --config jest.integ.config.mjs -- parity/"
  },
  "dependencies": {
    "@opensearch-migrations/argo-types": "*",
    "@opensearch-migrations/k8s-types": "*",
    "zod": "^4"
  },
  "devDependencies": {
    "@kubernetes/client-node": "^1.4.0",
    "@testcontainers/k3s": "^11.11.0",
    "@types/jest": "*",
    "yaml": "^2.8.2"
  },
  "files": [
    "src",
    "README.md",
    "LICENSE"
  ]
}
