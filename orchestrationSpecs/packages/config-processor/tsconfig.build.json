{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "noEmit": false,
    "rootDir": "src",
    "outDir": "dist",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,

    "paths": {
      "resources/*": ["./resources/*"]    // add if you use this alias
    }
  },
  "include": ["src"],
  "exclude": ["tests", "**/*.test.ts"]
}
